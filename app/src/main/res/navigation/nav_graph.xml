<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="de.fklappan.app.webnotes.ui.overview.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/overview">
        <action
            android:id="@+id/action_overviewFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_overviewFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="de.fklappan.app.webnotes.ui.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detailview">
        <action
            android:id="@+id/action_detailFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="de.fklappan.app.webnotes.ui.edit.EditFragment"
        android:label="EditFragment"
        tools:layout="@layout/editview"/>
    <fragment
        android:id="@+id/addFragment"
        android:name="de.fklappan.app.webnotes.ui.add.AddFragment"
        android:label="AddFragment"
        tools:layout="@layout/editview"/>
</navigation>